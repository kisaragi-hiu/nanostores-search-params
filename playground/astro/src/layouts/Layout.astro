---
import "../../../shared/src.css";
import MainLayout from "../../../shared/MainLayout.svelte";

interface Props {
  title: string;
  page: string;
}

const { title, page } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-3">
      <MainLayout page={page}><slot /></MainLayout>
    </div>
  </body>
</html>
